<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Welcome Doctor</title>
  <!-- Bootstrap CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

  <!-- Font Awesome CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- My style sheet -->
  <link rel="stylesheet" href="/stylesheets/styles.css">
</head>

<body>
  <div class="banner">
    <img class="medicalBanner" src="http://drakash.com.au/images/logo_obgyn.png" alt="">
    <!-- Home button -->
    <a href="/">
      <button class="homeBtn rightBanner" type="button" name="home"> <i class="fa fa-home" aria-hidden="true"></i> </button>
    </a>
  </div>
  <br>

  <h1>Welcome Dr. <%= doctor.name %></h1>

  <!-- Appointments buttons -->
  <div class="appointmentsBTN">
    <a href="/confirmed"><button class="appsBtns" >Confirmed Appointments</button></a>
    <a href="/unconfirmed"><button class="appsBtns" >Unconfirmed Apppointments</button></a>
    <a href="/completedApps"><button class="appsBtns" >Completed Appointments</button></a>
  </div>

  <!-- List of bookings -->
  <%if(booking.length >= 3) {%>
    <div class="gridContainer">
      <% }else if(booking.length == 2) {%>
        <div class="gridContainer2">
          <%} else {%>
            <div class="gridContainer1">
              <%}%>
                <% for(var i = 0; i<booking.length; i++){ %>
                  <div class="bookings gridItem">

                    <h4 class=""><%= booking[i].name %></h4>
                    <h4 class=""><%= booking[i].date %></h4>
                    <b class=""><%= booking[i].reason %></b>
                    <p class="">
                      <%= booking[i].details %>
                    </p>


                    <!-- View Btn -->
                    <a href="/booking/<%=booking[i].id%>">
        <button class="bookBtn" type="button">View</button>
        </a>
                  </div>
                  <% } %>
            </div>


</body>

</html>
