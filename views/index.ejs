<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">

  <!-- Bootstrap CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

  <!-- Font Awesome CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- My style sheet -->
  <link rel="stylesheet" href="/stylesheets/styles.css">

  <title>Welcome</title>
</head>

<body>
  <a href="/doctor/login">Doctor Login <i class="fa fa-user-md" aria-hidden="true"></i></a>

  <h1>Doctors Available</h1>
  <div class="grid-container">
    <% for(var i = 0; i<doctor.length; i++){ %>

      <div class="grid-item itemBG">
        <h3 class=""> Dr. <%= doctor[i].name %></h3>
        <img src="<%= doctor[i].img_url %>" alt="doctor image">
        <br>
        <!-- Book Btn -->
        <a href="/book/<%=doctor[i].id%>">
          <button class="bookBtn" type="button" name="button">Book</button>
          </a>
      </div>

      <% } %>
  </div>
</body>

</html>
