<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">

  <!-- Bootstrap CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

  <!-- Font Awesome CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- Google Fonts Link -->
  <link href="https://fonts.googleapis.com/css?family=Libre+Baskerville|Marcellus|Nanum+Myeongjo" rel="stylesheet">

  <!-- My style sheet -->
  <link rel="stylesheet" href="/stylesheets/styles.css">

  <title>Welcome</title>
</head>

<body>
  <div class="banner">
    <img class="medicalBanner" src="http://drakash.com.au/images/logo_obgyn.png" alt="">
    <a class="rightBanner" href="/doctor/login"> Doctor Login <i class="fa fa-user-md" aria-hidden="true"></i></a>
  </div>

  <h1>Doctors Available</h1>
  <div class="gridContainer">
    <% for(var i = 0; i<doctor.length; i++){ %>

      <div class="gridItem itemBG">
        <h3 class="docNames"> <%= doctor[i].name %>, MD</h3>
        <br>
        <img src="<%= doctor[i].img_url %>" alt="doctor image">
        <p>
          <%=doctor[i].bio%>
        </p>
        <br>
        <!-- Book Btn -->
        <a href="/book/<%=doctor[i].id%>">
          <button class="bookBtn" type="button" name="button"><b>Book</b></button>
          </a>
      </div>

      <% } %>
  </div>
</body>

</html>
