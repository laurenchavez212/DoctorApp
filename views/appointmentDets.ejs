<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Appointment Details</title>
  <!-- Bootstrap CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

  <!-- Font Awesome CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- My style sheet -->
  <link rel="stylesheet" href="/stylesheets/styles.css">
</head>

<body>
  <!-- Edit -->
  <a href="/book/edit/<%=booking.id%>">Edit</a>

  <h1><%=booking.name%></h1>
  <h3><%=booking.reason%></h3>
  <p>
    <%=booking.details%>
  </p>

  <p>Current booking status is <%=booking.status%></p>
  <!-- Status button -->
  <% if(booking.status === 'unconfirmed') { %>

    <!-- Mark Confirmed -->
    <a href="/confirmed/<%=booking.id%>"><button>Mark as Confirmed</button></a>

<% } else if (booking.status === 'confirmed') { %>

  <!-- Mark Completed -->
  <a href="/completed/<%=booking.id%>"><button>Mark as Completed</button></a>

<% } else {  %>
  <!-- Delete -->
  <a href="/del/<%=booking.id%>"><button>Delete</button></a>
<% } %>
  <h2>Notes:</h2>
    <% for(var i = 0; i < drNotes.length; i++) {  %>

          <p>
            <%= drNotes[i].content %>
          </p>

          <!-- Delete Comment -->
          <h6><a href="/del/note/<%= drNotes[i].id %>">
            <i class="fa fa-trash" aria-hidden="true"></i>
          </a></h6>
        <% } %>

  <!-- Add note -->
  <form action="/notes/<%= booking.id %>" method="post">
    <textarea name="content" rows="8" cols="40" placeholder="Enter a new Note"></textarea>
    <br>
    <input type="submit">
  </form>

</body>

</html>
